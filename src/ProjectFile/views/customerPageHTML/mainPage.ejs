  <!-- 위의 메뉴판 부분 -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
      <div class="navbar-brand"> <img src="/img/logofile.png" alt=""> </div>
      <!-- 학교 이름 삽입 -->
      <div class="univ_name" style="color: white"><%= Univname %> </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <!-- 이미 home page라서 변경사항 x -->
            <a class="nav-link" href="#">Home
              <span class="sr-only">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <!-- 마이 페이지 -->
            <form action="/customer/consumer_page/" method="post">
              <input class="nav-link" type="submit" value="My Page">
            </form>
          </li>
          <li class="nav-item">
            <!-- 로그 아웃 -->
            <form action="/customer/logout/logout" method="post">
              <input class="nav-link" type="submit" value="Log out">
            </form>
          </li>
        </ul>
      </div>
    </div>
    </div>
  </nav>
  <!-- Page Content -->
  <div class="container ">
    <div class="row main-feature">
      <div class="col-lg-12">
        <!-- 상품 검색 -->
        <div class="navbar-search top-margin">
          <h4 class="navbar title">상품명 검색</h4>
          <center>
            <!-- 검색 form -->
            <form class="" action="/customer/search/" method="post">
              <div class="input-group md-form form-sm form-2 pl-0">
                <input class="form-control my-0 py-1 red-border" name="search" type="text" placeholder="검색" aria-label="Search">
                <div class="input-group-append">
                  <!-- 검색하기 -->
                  <button type="submit" name="search_button" class="btn btn-secondary" onclick="location.href='/customer/search/'">
                    <svg class="bi bi-search" width="1em" height="1em" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" d="M12.442 12.442a1 1 0 011.415 0l3.85 3.85a1 1 0 01-1.414 1.415l-3.85-3.85a1 1 0 010-1.415z" clip-rule="evenodd"></path>
                      <path fill-rule="evenodd" d="M8.5 14a5.5 5.5 0 100-11 5.5 5.5 0 000 11zM15 8.5a6.5 6.5 0 11-13 0 6.5 6.5 0 0113 0z" clip-rule="evenodd"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </form>
          </center>
        </div>
        <hr>

        <!-- 상품 목록 -->
        <h4 class="navbar title">추천 상품</h4>
        <div class="row">

          <% for(var i = 0; i < Length; i++){ %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 hoverchange-<%=i %>">

              <form action="/customer/product/" method="post">
                <input type="image" class="card-img-top ontop-<%=i %>" src=" <%= Itemurl[i] %> " name="Submit" alt="">
                <input type="hidden" name="ItemID" value="<%= itemid[i] %>"> <!-- 상품의 itemid -->
              </form>
              <div class="card-body">
                <h4 class="card-title">
                  <%= Itemname[i] %>
                </h4>
                <hr>
                <h5><%= Itemprice[i] %>￦</h5>
                <p class="card-text"><%= Description[i] %></p>
              </div>
            </div>
          </div>
          <% } %>
        </div>


        <!-- /.col-lg-9 -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container -->
  </div>
  <!-- Footer -->
  <footer class="py-5 bg-dark">
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; Your Website 2019</p>
