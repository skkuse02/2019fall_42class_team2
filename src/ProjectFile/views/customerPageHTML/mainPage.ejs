    }

    input.img-button {
      background: url("images/button_search.png") no-repeat;
      border: none;
      width: 32px;
      height: 32px;
      cursor: pointer;
    }

    .nav-item .nav-link {
      background-color: transparent;
      border: 0px transparent solid;
    }

    .row {
      margin-top: 30px;
    }

    .navbar-brand img {
      border: 5px solid gray;
      width: 100px;
    }

    .h-100 {
      transition: 0.3s;
    }

    .card-title {
      font-weight: bold;
    }
