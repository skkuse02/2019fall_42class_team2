  <style>
    body {
      background-image: url('/img/Gray-Background.png');
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
    }

    .main-feature {
      background-color: white;
    }

    .title {
      color: white;
      background-color: #555555;
      font-weight: bold;
    }

    .bulletin {
